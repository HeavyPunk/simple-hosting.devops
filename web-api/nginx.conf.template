
user kirieshki;

events {}
http {
    server {

        listen 80;
        server_name example.com;
        
        location /assets/ {
            root ${ASSETS_PATH};
            include  /etc/nginx/mime.types;
        }

        location / {
            root ${ASSETS_PATH}/assets/;
            include  /etc/nginx/mime.types;
        }
        
        location /api/ {
            proxy_pass http://localhost:9000;
        }
    }
}